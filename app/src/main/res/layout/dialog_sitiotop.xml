<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/imgFilmDlg"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@color/blackDialog"
         />

    <TextView
        android:id="@+id/txtNombreDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textStyle="bold"
        android:paddingLeft="2dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_map_black_24dp"
        android:drawablePadding="8dp"
        android:id="@+id/boton"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/pinkDialog"
        android:text="Ir"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/imgFilmDlg"/>


    <TextView
        android:id="@+id/txtFavoritoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Favoritos: "
        android:textSize="14sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/txtFavoritoDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Favoritos: "
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtMeGustaB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Me gusta: "
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtMeGustaDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Me gusta: "
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtContadorB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Contador de visitas: "
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txContadorDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="contador"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/txtVacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />




</LinearLayout>

</ScrollView>