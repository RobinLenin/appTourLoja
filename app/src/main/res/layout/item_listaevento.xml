<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
      >

    <ImageView
        android:id="@+id/imgEvento"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:src="@mipmap/ic_search"
        android:background="@color/blackDialog"
        />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/imgEvento"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="17dip"
        android:textStyle="bold"
        android:text="TextView"
        android:paddingLeft="4dp"/>

    <TextView
        android:id="@+id/tvLugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNombre"
        android:textColor="#343434"
        android:textSize="16dip"
        android:layout_marginTop="3dip"
        android:text="Lugar "
        android:textStyle="italic"
        android:paddingLeft="3dp"/>

    <TextView
        android:id="@+id/tvFechaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLugar"
        android:paddingLeft="135dp"

        android:textSize="17dip"
        android:layout_marginTop="3dip"
        android:textStyle="bold"
        android:text="Fecha: "
        />
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvFechaTitulo"
        android:layout_below="@+id/tvLugar"
        android:paddingLeft="2dp"
        android:textColor="@color/deeppurple"
        android:textSize="16dip"
        android:textStyle="bold"
        android:layout_marginTop="3dip"
        android:text=" "
        android:paddingBottom="10dp"
        />






</RelativeLayout>


